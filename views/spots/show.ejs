<!DOCTYPE html>
<html  lang="en">
  <%- include('../_partial/head') %>
  <script src="/js/profile.js"></script>
  <body>
    <header class="w-full bg-gray-200 p-2 px-4 text-black flex justify-between items-center">
      <h1 class="text-xl font-extrabold tracking-widest ml-4 font-mono text-blue-700">go2dive</h1>
      <h1 class="text-2xl font-extrabold tracking-widest ml-4 font-mono text-blue-700">Dive Spot</h1>
      <a href="/signin" class="uppercase p-2 mr-4"><form action="/signout" method="post">
        <input
          type="submit"
          value="Log Out"
        />
      </form>
    </a>
    </header>
    <section class="relative w-full">
      <div class="absolute bg-transparent w-full bg-blue-900 flex flex-col justify-center">
        <div>
          <a href ="/spots/new">Add a Spot</a><br/>
          <a href ='/spots/<%= spot._id %>/edit'>edit</a>
          <form action="/spots/<%= spot._id %>?_method=DELETE" method="POST">
            <input type="submit" value="削除" />
          </form>
        </div>
        <ul class="gnav">
          <li>
            <a href="">Menu</a>
            <ul>
              <li><a href="/spots">Back to Spot List</a></li>
              <li><a href="/users">Find Buddies</a></li>
              <li><a href="/dashboard">Back Home</a></li>
            </ul>
          </li>
        </ul>
        <div class="flex flex-col justify-center text-center items-center">
          <h1 class="text-white uppercase text-3xl font-mono tracking-widest"><%= spot.name %></a></h1>
          <h2 class="text-white uppercase text-3xl font-mono tracking-widest"><%= spot.location %>, <%= spot.country %></h2>
          <img src="<%= spot.image %>" width="50%" alt ="<%= spot.name %>">
          <small class="text-white text-2xl font-mono tracking-widest"><%= spot.note %></small>
          <small class="text-white text-2xl font-mono tracking-widest">Last Update: <%= spot.updated_at %></small>
        </div>
      </div>

  <%- include('../_partial/footer') %>
  </body>
</html>
