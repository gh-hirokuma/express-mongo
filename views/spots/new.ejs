<!DOCTYPE html>
<html lang="en">
  <%- include('../_partial/head') %>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <link rel="stylesheet" href="stylesheets/style.css" />
  <script src="/js/countries.js"></script>
  <title>Dive Spots</title>

  <body>
    <% if(messages.error){ %> <% messages.error.forEach(err => { %>
    <div class="alert alert-success" role="alert"><%= err %></div>
    <% }) %> <% } %>
    <header class="w-full bg-gray-200 p-2 px-4 text-black flex justify-between items-center">
      <h1 class="text-xl font-extrabold tracking-widest ml-4 font-mono text-blue-700">go2dive</h1>
      <h1 class="text-2xl font-extrabold tracking-widest ml-4 font-mono text-blue-700">Dive Spot</h1>
      <a href="/signin" class="uppercase p-2 mr-4"><form action="/signout" method="post">
        <input
          type="submit"
          value="Log Out"
        />
      </form>
    </a>
    </header>
    <form action="/spots" method="POST" enctype="multipart/form-data">
      <label for="name">Name:</label><br />
      <input type="text" id="name" name="name" value="" /><br />
      <label for="location">Location:</label><br />
      <input type="text" id="location" name="location" value="" /><br />
      <label for="country">Country:</label><br />
      <select class="js-example-basic-single" name="country" value="">
        <% countries.forEach(country => { %>
        <option value="<%= country.name %>"><%= country.name %></option>
        <% }) %> </select><br />
      <label for="Note">Note:</label><br />
      <input type="text" id="note" name="note" value="" /><br />
      <label for="depth">Depth:</label><br />
      <input type="number" id="depth" name="depth" value="" /><br />
      <label for="image">Image:</label><br />
      <input
        type="file"
        id="file"
        name="file"
        value=""
        accept="image/png, image/jpeg"
      /><br />

      <input type="submit" value="Submit" />
    </form>

    <%- include('../_partial/footer') %>
  </body>
</html>
