<!DOCTYPE html>
<html lang="en">
  <%- include('../_partial/head') %>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <link rel="stylesheet" href="stylesheets/style.css" />
  <script src="/js/countries.js"></script>
  <title>Dive Spots</title>

  <body>
    <% if(messages.error){ %> <% messages.error.forEach(err => { %>
    <div class="alert alert-success" role="alert"><%= err %></div>
    <% }) %> <% } %>
    <%- include('../_partial/header') %>

    <section class="relative w-full h-screen py-20 bg-blue-900">
      <div class="absolute w-full h-full flex flex-col justify-center">
        <div class="flex flex-col justify-center items-center text-right">
          <form action="/spots" method="POST" enctype="multipart/form-data">
            <div class="my-2">
              <label for="name" class="text-gray-200 font-mono bold text-2xl">Name </label>
              <input type="text" id="name" name="name" value="" class="h-10 rounded font-mono text-blue-900 text-xl">
            </div>
            <div class="my-2">
              <label for="location" class="text-gray-200 font-mono bold text-2xl">Location </label>
              <input type="text" id="location" name="location" value="" class="h-10 rounded font-mono text-blue-900 text-xl">
            </div>
            <div class="my-2">
              <label for="country" class="text-gray-200 font-mono bold text-2xl">Country </label>
              <select class="js-example-basic-single" name="country" value="">
                <% countries.forEach(country => { %>
                <option value="<%= country.name %>" class="h-10 rounded font-mono text-blue-900 text-xl"><%= country.name %></option>
                <% }) %> </select>
            </div>
            <div class="my-2">
              <label for="note" class="text-gray-200 font-mono bold text-2xl">Note </label>
              <input type="text" id="note" name="note" value="" class="h-10 rounded font-mono text-blue-900 text-xl">
            </div>
            <div class="my-2">
              <label for="depth" class="text-gray-200 font-mono bold text-2xl">Max Depth </label>
              <input type="number" id="depth" name="depth" value="" class="h-10 rounded font-mono text-blue-900 text-xl">
            </div>
            <div class="my-2">
              <label for="image" class="text-gray-200 font-mono bold text-2xl">Image </label>
              <input
                type="file"
                id="file"
                name="file"
                value=""
                accept="image/png, image/jpeg"
                class="h-10 rounded font-mono text-blue-900 text-xl"
                >
            </div>
            <div class="my-2">
              <input type="submit" value="Submit" class="text-xl bold uppercase text-blue-900 bg-yellow-400 px-3 py-1 rounded hover:text-blue-700 cursor:pointer font-mono"/>
            </div>
          </form>
        </div>
      </div>
    </section>
    <nav
    id="nav"
    class="z-50 bg-yellow-400 uppercase font-opensans rouned
      w-64 h-full fixed top-0 right-0 hidden transition-transform-1s"
    >
    <div id="open_nav" class="top-5 ml-3">
      <svg id="close_nav" viewbox="0 0 100 80" class="cursor-pointer">
        <line x1="10" y1="10" x2="23" y2="23" stroke="#071a3b" stroke-width="4" />
        <line x1="23" y1="10" x2="10" y2="23" stroke="#071a3b" stroke-width="4" />
      </svg>
    </div>

    <div class="px-2 pt-2 pg-4">
      <a href="/dashboard" class='block px-2 py-1 text-blue-900 text-2xl font-bold font-mono rounded hover:text-blue-700 cursor:pointer'>Back Home</a>
      <a href="/users/profile" class='block px-2 py-1 text-blue-900 text-2xl font-bold font-mono rounded hover:text-blue-700 cursor:pointer'>My Profile</a>
      <a href="/spots" class='mt-1 block px-2 py-1 text-blue-900 text-2xl font-bold font-mono rounded hover:text-blue-700 cursor:pointer'>Find Spots</a>
      <a href="/users" class='mt-1 block px-2 py-1 text-blue-900 text-2xl font-bold font-mono rounded hover:text-blue-700 cursor:pointer'>Find Buddies</a>
      <a href="/signin"><form action="/signout" method="post">
        <input
          type="submit"
          value="Log Out"
          class="mt-1 block px-2 py-1 bg-yellow-400 text-blue-900 text-2xl font-bold font-mono uppercase rounded hover:text-blue-700 cursor:pointer w-full text-left"
        />
      </form>
      </a>
    </div>
  </nav>
    <%- include('../_partial/footer') %>
  </body>
</html>
