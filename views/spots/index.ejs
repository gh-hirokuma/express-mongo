<!DOCTYPE html>
<html  lang="en">
  <%- include('../_partial/head') %>
  <script src="/js/paginate.js"></script>
  <body>
    <header class="w-full bg-gray-200 p-2 px-4 text-black flex justify-between items-center">
      <h1 class="text-xl font-extrabold tracking-widest ml-4 font-mono text-blue-700">go2dive</h1>
      <h1 class="text-2xl font-extrabold tracking-widest ml-4 font-mono text-blue-700">Dive Spots</h1>
      <a href="/signin" class="uppercase p-2 mr-4"><form action="/signout" method="post">
        <input
          type="submit"
          value="Log Out"
        />
      </form>
    </a>
    </header>
    <span class ="linkbtn"><a href ='/spots/new'>Add a Spot</a></span>
    <section class="relative w-full">
      <div class="absolute bg-transparent w-full bg-blue-900 ">
          <ul class="gnav">
            <li>
              <a href="">Menu</a>
              <ul>
                <li><a href="/users">Find Buddies</a></li>
                <li><a href="/dashboard">Back Home</a></li>
              </ul>
            </li>
          </ul>
          <div class="flex flex-col justify-center items-center">
                <% results.forEach((spot) => { %>
                  <h1 class="text-center text-white uppercase text-3xl font-mono tracking-widest"><a href ='/spots/<%= spot._id %>'><%= spot.name %></a></h1>
                  <h2 class="text-center text-white uppercase text-2xl font-mono tracking-widest"><%= spot.location %>, <%= spot.country %></h2>
                  <img src="<%= spot.image %>" width="30%" alt ="<%= spot.name %>">
                <% }); %>
                <a href="/spots?next=eyIkb2lkIjoiNWU4NzNhYmJmMTBmZmZiZWRkYTI2OTliIn0">next</a>
          </div>

      </div>

    </section>

    <%- include('../_partial/footer') %>

  </body>
</html>
