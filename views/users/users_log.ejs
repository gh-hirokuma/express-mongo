<!DOCTYPE html>
<html lang="en">
  <%- include('../_partial/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="stylesheets/style.css" />
    <title>Dive Logs</title>

  <body>
    <header class="w-full bg-gray-200 p-2 px-4 text-black flex justify-between items-center">
      <h1 class="text-xl font-extrabold tracking-widest ml-4 font-mono text-blue-700">go2dive</h1>
      <h1 class="text-2xl font-extrabold tracking-widest ml-4 font-mono text-blue-700">My Divelog</h1>
      <a href="/signin" class="uppercase p-2 mr-4"><form action="/signout" method="post">
        <input
          type="submit"
          value="Log Out"
        />
      </form>
    </a>
    </header>

    <section class="relative w-full h-screen">
      <div class="absolute w-screen h-screen bg-gray-700 opacity-50"></div>
        <div class="absolute bg-transparent w-screen h-screen flex flex-col justify-center">
          <ul class="gnav">
            <li>
                <a href="">Menu</a>
                <ul>
                    <li><a href="/spots">Find Spots</a></li>
                    <li><a href="/users">Find Buddies</a></li>
                    <li><a href="/users/profile">My Profile</a></li>
                    <li><a href="/dashboard">Home</a></li>
                </ul>
            </li>
          </ul>
          <h1 class="text-xl font-extrabold tracking-widest ml-4 font-mono text-blue-700"><% if (isMe) { %> <a href="/divelogs/new">Log a Dive</a> <% } %></h1>
          <div class="flex flex-col justify-center text-center">

      <ul>
        <% result.forEach((users, i) => { %>
        <li class="text-white uppercase text-5xl font-mono tracking-widest">
          <%= users.name %> <% if (users.divelogs) { %> <%
          users.divelogs.forEach((divelog, i) => { %>
          <a href="/divelogs/<%= divelog._id %>"><%= `Dive #${i + 1}` %> <%= divelog.spot_name %></a><br>
          <% }) %> <% } %>
        </li>
        <% }); %>
      </ul>
          </div>
      </div>
      <img
        class="object-cover w-screen h-screen align-center"
        src="https://images.unsplash.com/photo-1499980762202-04245017d5bf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80"
        alt="starfish"
      />
  </section>

    <%-include('../_partial/footer') %>
  </body>
</html>
