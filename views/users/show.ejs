<!DOCTYPE html>
<html lang="en">
  <%- include('../_partial/head') %>
  <body>
    <%- include('../_partial/header') %>
    <div class="absolute w-full h-full bg-blue-800"></div>

    <section class="relative w-full h-500 pt-20">
      <div class="relative bg-transparent w-full h-500">
        <div class="cpntainer float-left mx-8 my-5">
          <a href="/dashboard"><p class="width-100 px-3 py-1 bg-yellow-400 text-blue-900 text-xl font-bold font-mono rounded hover:text-blue-700 text-center mx-3 my-2">Back Home</p></a>
          <a href="/users/<%= result._id %>/edit"><p class="width-100 px-3 py-1 bg-yellow-400 text-blue-900 text-xl font-bold font-mono rounded hover:text-blue-700 text-center mx-3 my-2">Edit Profile</p></a>
        </div>
          <div class="container flex flex-col w-full h-80% justify-center items-center">
            <img src="<%= result.image %>" class="w-1/12 h-1/12 rounded-full" alt ="<%= result.username %>">
            <h1 class="text-white uppercase text-5xl font-mono tracking-widest"><%= result.username %></h1>
            <h2 class="text-white uppercase text-3xl font-mono tracking-widest"><%= result.certificate %></h2>
            <h3 class="text-white uppercase text-2xl font-mono tracking-widest">Country: <%= result.country %></h3>
            <h3 class="text-white uppercase text-2xl font-mono tracking-widest">Date of Birth: <%= result.DOB %></h3>
            <h3 class="text-white uppercase text-2xl font-mono tracking-widest">Total Dives: <%= result.divelogs.length %></h3>
          </div>
            <div class="container pt-10 w-full border-b-2 border-gray-200 text-center">
              <h1 class=" uppercase text-2xl text-gray-200 font-opensans bold">Divelog</h1>
            </div>
      </div>

    </section>

    <section>
      <section class="w-full bg-blue-800 p-2 md:p-4">
        <section class="w-full p-1 md:p-4 container mx-auto">
          <ul class="flex flex-row flex-wrap">
            <% result.divelogs.filter((_, i) => i <= 5).forEach((divelog, i)=> {%>
              <li class="w-full md:w-1/3 p-2 md:p-4">
                <div class="relative bg-gray-800 h-64">
                  <div class="absolute bg-gray-900 opacity-75 h-full w-full"></div>
                  <div class="absolute h-full w-full flex justify-center items-center text-2xl text-bold text-gray-200 hover:text-gray-400 font-mono text-center">
                    <a href="/divelogs/<%= divelog._id %>"><%= `Dive #${i + 1}` %><br>
                    <%= divelog.spot.name %></a><br>
                  </div>
                  <img src="<%= divelog.spot.image %>" class="object-cover h-64 w-full" alt ="<%= divelog.spot_name %>">
              </li>
          <% }) %>
          </ul>
        </section>
        <section class="w-40 container align-center p-1 md:p-4 bg-blue-800 container mx-auto my-5 text-center">
          <p class="w-full text-xl bold uppercase text-blue-900 bg-yellow-400 px-3 py-1 rounded hover:text-blue-700 cursor:pointer font-mono"><a href="/users/<%= result._id %>/logs">View More</a></p>
        </section>
      </section>
    </section>
    <nav
      id="nav"
      class="bg-yellow-400 text-gray-200 uppercase font-mono rouned
      w-64 h-full fixed top-0 right-0 hidden transition-transform-1s z-50"
      >
      <div id="open_nav" class="top-5 ml-3">
        <svg id="close_nav" viewbox="0 0 100 80" class="cursor-pointer">
          <line x1="10" y1="10" x2="23" y2="23" stroke="#071a3b" stroke-width="4" />
          <line x1="23" y1="10" x2="10" y2="23" stroke="#071a3b" stroke-width="4" />
        </svg>
      </div>

        <a href="/spots" class='block px-2 py-1 text-blue-700 text-2xl font-bold font-mono rounded hover:bg-blue-200'>Find Spots</a>
        <a href="/users" class='block px-2 py-1 text-blue-700 text-2xl font-bold font-mono rounded hover:bg-blue-200'>Find Buddies</a>
        <a href="/dashboard" class='block px-2 py-1 text-blue-700 text-2xl font-bold font-mono rounded hover:bg-blue-200'>Back Home</a>
        <a href="/signin"><form action="/signout" method="post">
          <input
            type="submit"
            value="Log Out"
            class="mt-1 block px-2 py-1 bg-yellow-400 text-blue-700 text-2xl font-bold font-mono uppercase rounded hover:bg-blue-200 w-full text-left"
          />
        </form>
        </a>
        <a>
        <form action="/users/<%= result._id %>?_method=DELETE" method="POST">
          <input
            type="submit"
            value="Quit go2dive"
            class="mt-1 block px-2 py-1 bg-yellow-400 text-blue-700 text-2xl font-bold font-opensans uppercase rounded hover:bg-blue-200 w-full text-left"
            />
        </form>
        </a>
    </nav>

    </form>
    <%- include('../_partial/footer') %>
  </body>
</html>
