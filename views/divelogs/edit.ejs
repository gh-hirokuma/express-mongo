<!DOCTYPE html>
<html  lang="en">
  <%- include('../_partial/head') %>
  <script src="../js/diveLog.js"></script>
  <script src="/js/spots.js"></script>
  <script src="/js/countries.js"></script>
  <body>
    <%- include('../_partial/header') %>

    <section class="relative w-full h-screen py-20 bg-blue-900">
      <div class="absolute w-full h-full flex flex-col justify-center">
        <div class="flex flex-col justify-center items-center text-right">
          <form action="/divelogs" method="POST">
            <div class="my-1">
              <label for="date" class="text-gray-200 font-mono bold text-2xl">Date </label>
              <input type="date" id="date" name="date" value="<%= divelog.date %>" class="h-10 rounded font-mono text-blue-900 text-xl">
            </div>
          <div class="my-1">
            <label for="spot_name" class="text-gray-200 font-mono bold text-2xl">Spot Name </label>
            <select class="js-example-basic-single" name="spot" value="" class="h-10 rounded font-mono text-blue-900 text-xl">
              <% spots.forEach(spot => { %>
                <option value="<%= spot.name %>" <% if( spot.name === divelog.spot_name) {%>selected<% }%>>
                  <%= spot.name %>
                </option><% }) %>
            </select>
          </div>
          <div class="my-2">
            <label for="entry" class="text-gray-200 font-mono bold text-2xl">Entry </label>
            <input type="text" id="entry" name="entry" value="<%= divelog.entry %>" class="h-10 rounded font-mono text-blue-900 text-xl">
          </div>
          <div class="my-2">
            <label for="current" class="text-gray-200 font-mono bold text-2xl">Current </label>
            <input type="text" id="current" name="current" value="<%= divelog.current %>" class="h-10 rounded font-mono text-blue-900 text-xl">
          </div>
          <div class="my-2">
            <label for="weather" class="text-gray-200 font-mono bold text-2xl">Weather </label>
            <input type="text" id="weather" name="weather" value="<%= divelog.weather %>" class="h-10 rounded font-mono text-blue-900 text-xl">
          </div>
          <div class="my-2">
            <label for="air_temperature" class="text-gray-200 font-mono bold text-2xl">Air Temperature（℃） </label>
            <input
              type="number"
              id="air_temperature"
              name="air_temperature"
              value="<%= divelog.air_temperature %>"
              class="h-10 rounded font-mono text-blue-900 text-xl"
            >
          </div>
          <div class="my-2">
            <label for="water_temperature" class="text-gray-200 font-mono bold text-2xl">Water Temperature（℃） </label>
            <input
              type="number"
              id="water_temperature"
              name="water_temperature"
              value="<%= divelog.water_temperature %>"
              class="h-10 rounded font-mono text-blue-900 text-xl"
            >
          </div>
          <div class="my-2">
            <label for="depth" class="text-gray-200 font-mono bold text-2xl">Max Depth （metric） </label>
            <input type="number" id="depth" name="depth" value="<%= divelog.depth %>" class="h-10 rounded font-mono text-blue-900 text-xl">
          </div>
          <div>
            <label for="duration" class="text-gray-200 font-mono bold text-2xl">Duration（mins） </label>
            <input type="number" id="duration" name="duration" value="<%= divelog.duration %>" class="h-10 rounded font-mono text-blue-900 text-xl">
          </div>
          <div class="my-2">
            <label for="note" class="text-gray-200 font-mono bold text-2xl">Note </label>
          <input type="string" id="note" name="note" value="<%= divelog.note %>" class="h-10 rounded font-mono text-blue-900 text-xl"><br>
        </div>
        <div class="my-2">
          <input type="submit" value="Submit" class="text-xl bold uppercase text-blue-900 bg-yellow-400 px-3 py-1 rounded hover:text-blue-700 cursor:pointer font-mono">
        </div>
        </form>
      </div>
      <div class="float-left mx-3 mb-10">
        <form action="/divelogs/<%= divelog._id %>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE THIS LOG"  class="text-xl bold uppercase text-blue-900 bg-yellow-400 px-3 py-1 rounded hover:text-blue-700 hover:bg-red-300 cursor:pointer font-mono">
        </form>
      </div>
    </div>
    </section>
    <nav
    id="nav"
    class="z-50 bg-yellow-400 uppercase font-opensans rouned
      w-64 h-full fixed top-0 right-0 hidden transition-transform-1s"
    >
    <div id="open_nav" class="top-5 ml-3">
      <svg id="close_nav" viewbox="0 0 100 80" class="cursor-pointer">
        <line x1="10" y1="10" x2="23" y2="23" stroke="#071a3b" stroke-width="4" />
        <line x1="23" y1="10" x2="10" y2="23" stroke="#071a3b" stroke-width="4" />
      </svg>
    </div>

    <div class="px-2 pt-2 pg-4">
      <a href="/users/profile" class='block px-2 py-1 text-blue-700 text-2xl font-bold font-opensans rounded hover:bg-blue-200'>My Profile</a>
      <a href="/spots" class='mt-1 block px-2 py-1 text-blue-700 text-2xl font-bold font-opensans rounded hover:bg-blue-200'>Find Spots</a>
      <a href="/users" class='mt-1 block px-2 py-1 text-blue-700 text-2xl font-bold font-opensans rounded hover:bg-blue-200'>Find Buddies</a>
      <a href="/signin"><form action="/signout" method="post">
        <input
          type="submit"
          value="Log Out"
          class="mt-1 block px-2 py-1 bg-yellow-400 text-blue-700 text-2xl font-bold font-opensans uppercase rounded hover:bg-blue-200 w-full text-left"
        />
      </form>
      </a>
    </div>
  </nav>
    <%- include('../_partial/footer') %>
  </body>
</html>
